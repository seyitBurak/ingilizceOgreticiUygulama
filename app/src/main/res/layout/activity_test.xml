<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/arkaplan_layout"

    android:padding="24dp"
    tools:context=".seviye1">


    <TextView
        android:id="@+id/toplamsoru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="15"
        android:textColor="@color/Sarı"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Sayaç"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="5"
        android:layout_centerHorizontal="true"
        android:textColor="@color/kırmızı"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/sorular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/choices_layout"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:text="Sorular"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/choices_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/sık_a"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/Deep_Sky_Blue_1"
            android:text="şık a"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/sık_b"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/Deep_Sky_Blue_1"
            android:text="şık b"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/sık_c"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/Deep_Sky_Blue_1"
            android:text="şık c"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/sık_d"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/Deep_Sky_Blue_1"
            android:text="şık d"
            android:textColor="@color/white" />

    </LinearLayout>

    <Button
        android:id="@+id/devam_et"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/choices_layout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        android:text="Devam" />

    <Button
        android:id="@+id/buttonanasayfa"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_anasayfa" />


</RelativeLayout>