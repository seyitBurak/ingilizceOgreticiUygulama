<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/arkaplan_layout"
    tools:context=".anasayfa_activity">

    <LinearLayout
        android:id="@+id/llayout"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_525sdp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="260dp"
            android:layout_height="198dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/zyro_image" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Welcome To The App"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="@dimen/_290sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/koselilyout"
            android:orientation="vertical">

            <Button
                android:id="@+id/testet"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/buton_arka"
                android:gravity="fill_vertical"
                android:paddingStart="@dimen/_15sdp"
                android:text="Kendini Test Et"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/kelimeogren"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/buton_arka"
                android:gravity="fill_vertical"
                android:paddingStart="@dimen/_15sdp"
                android:text="Kelime Öğren"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/resimleogren"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/buton_arka"
                android:gravity="fill_vertical"
                android:paddingStart="@dimen/_15sdp"
                android:text="Resimler İle Öğren"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/notdefteri"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/buton_arka"
                android:gravity="fill_vertical"
                android:paddingStart="@dimen/_15sdp"
                android:text="Not Kaydet"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>   