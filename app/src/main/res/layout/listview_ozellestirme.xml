<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/resim"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_notdefterisimgesi" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buton_stil"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txttürkce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="türkce"
                android:textColor="@color/kırmızı"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtingilizce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ingilizce"
                android:textColor="@color/mavii"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtnot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="not"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txttarih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="tarih"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/txtsaat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="saat"
                android:textColor="@color/black"
                android:textSize="10dp" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>